<?xml version="1.0" encoding="UTF-8"?>

<included>

    <property resource="logback.properties" />

    <!-- 日志保存路径 -->
    <property name = "log.base.path" value="/opt/data/" />

    <property name="log.history.maxday" value="3"/>

    <property name="log.base" value="${log.base.path}/${log.project}/log"/>

    <include resource="com/zhiyin/logcnf/logback/base-appender.xml"/>
    <include resource="com/zhiyin/logcnf/logback/logback-warn-level.xml"/>

    <if condition='property("env").equals("prod")'>
        <then>
            <root level="INFO">
                <appender-ref ref="all_info" level="INFO"/>
                <appender-ref ref="all_error"/>
            </root>
        </then>
    </if>
    <if condition='property("env").equals("dev")'>
        <then>
            <root level="INFO">
                <appender-ref ref="STDOUT"/>
                <appender-ref ref="all_info" level="INFO"/>
                <appender-ref ref="all_error"/>
            </root>
        </then>
    </if>
    


</included>
